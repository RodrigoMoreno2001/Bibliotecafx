<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox id="body" alignment="TOP_CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="20.0" stylesheets="@../../../css/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bibliotecafx.controlador.AutoresController">
<children>

    <Label alignment="CENTER" prefHeight="17.0" prefWidth="1282.0" text="Gestión de Autores" />

    <TableView fx:id="tablaAutores" prefHeight="200.0" prefWidth="500.0">

        <columns>
            <TableColumn fx:id="columnaId" prefWidth="75.0" text="ID Autor" />
            <TableColumn fx:id="columnaNombre" prefWidth="150.0" text="Nombre" />
            <TableColumn fx:id="columnaNacionalidad" prefWidth="150.0" text="Nacionalidad" />
        </columns>

    </TableView>
      <HBox prefHeight="96.0" prefWidth="1280.0" spacing="5.0">
         <children>
            <TextField fx:id="idAutorText" prefHeight="25.0" prefWidth="118.0" promptText="id_autor" />
            <TextField fx:id="NombreText" promptText="Nombre" />
            <TextField fx:id="NacionalidadText" promptText="Nacionalidad" />
            <Button onAction="#onAnyadirClick" mnemonicParsing="false" text="Añadir" />
         </children></HBox>

</children>
</VBox>
